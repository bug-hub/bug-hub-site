extends ../layout

block content
  .col-sm-6.col-sm-offset-3
    h1
      span.fa.fa-sign-in
      |  Login
    form(action='/login', method='post')
      .form-group
        label Email
        input.form-control(type='text', name='user[username]')
      .form-group
        label Password
        input.form-control(type='password', name='user[password]' autocomplete="off")
      button.btn.btn-warning.btn-lg(type='submit') Login
  br
  h3 Sign up
  a(href="/signup") Click here to sign up
  h3 Or, login with Google!
  a(href="/auth/linkedin") Login via Linkedin