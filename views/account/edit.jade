extends ../layout.jade

block content
  .container-fluid.body-content
    h2 Edit your account
    form(action="/account?_method=PUT", method="POST" id = 'accountUpdate')
      h2 #{user.alias}
      img(id="photoDisplay", src="#{user.photo}" class="profilePhoto")
      .inputGroup
        label Name:
        input(class="form-control", type="text" name="user[alias]",  value=user.alias, autocomplete="off")
        label Image Photo Url:
        textarea(class="form-control", type="text" name="user[photo]", autocomplete="off") #{user.photo}
        input(class="btn btn-sm btn-primary" type="submit" value="Submit" id="submit")
    form(action="javascript:void(0)")
      input(class="btn btn-sm btn-danger reset" value="Reset Form") 
    form(action="/users/#{user.id}?_method=DELETE" method="POST" id="deleteAccount")
      label DEACTIVATE YOUR ACCOUNT
      input(type="submit" value="X" class="btn btn-md btn-danger")
    script(type="text/javascript", src="/javascripts/accountEdit.js")
    
