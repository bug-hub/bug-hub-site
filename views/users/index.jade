extends ../layout

block content
  h1 See all the users
  a(href="/users/new") Create a new user
  table(class="table table-striped table-hover")
    thead
      th 
      th Name
      th Show Posts
    tbody
      each user in users
        tr
          td 
            img.thumb(src="#{user.photo}")
          td #{user.alias}
          td
            a(href="/users/#{user.id}/posts") Posts
    tfoot